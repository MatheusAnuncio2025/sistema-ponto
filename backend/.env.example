# ===========================
# SERVIDOR
# ===========================
NODE_ENV=development
PORT=5000

# ===========================
# BANCO DE DADOS - PostgreSQL
# ===========================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sistema_ponto
DB_USER=postgres
DB_PASSWORD=postgres
DB_DIALECT=postgres
DB_LOGGING=false

# ===========================
# REDIS
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================
# JWT (Autenticação)
# ===========================
JWT_SECRET=sua_chave_secreta_muito_segura_mude_isso_em_producao_123456789
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================
# WEB PUSH (Notificações)
# ===========================
# Gere as chaves com: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:contato@suaempresa.com

# ===========================
# GEOLOCALIZAÇÃO
# ===========================
# Raio padrão em metros para validação de localização
DEFAULT_LOCATION_RADIUS=100

# ===========================
# UPLOADS
# ===========================
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=./uploads

# ===========================
# LOGS
# ===========================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================
# RATE LIMITING
# ===========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================
# SMTP (Email - Opcional)
# ===========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@suaempresa.com

# ===========================
# CORS
# ===========================
CORS_ORIGIN=http://localhost:3000

# ===========================
# TIMEZONE
# ===========================
TZ=America/Sao_Paulo
